{
  "name": "courselore",
  "version": "0.0.1",
  "scripts": {
    "develop": "ts-node-dev --files --poll src/index.ts",
    "test": "prettier --check 'src/**/*'",
    "build": "tsc && pkg --targets node14 --out-path pkg .",
    "clean": "shx rm -rf lib pkg",
    "deploy": "npm run build && ssh root@courselore.org 'mkdir -p courselore/' && rsync -av pkg/courselore root@courselore.org:courselore/ && ssh root@courselore.org 'systemctl restart courselore'"
  },
  "main": "lib/index.js",
  "bin": "lib/index.js",
  "dependencies": {
    "dompurify": "^2.2.6",
    "express": "^4.17.1",
    "greenlock": "^4.0.4",
    "greenlock-express": "^4.0.3",
    "jsdom": "^16.4.0",
    "rehype-katex": "^4.0.0",
    "rehype-raw": "^5.0.0",
    "rehype-sanitize": "^4.0.0",
    "rehype-stringify": "^8.0.0",
    "remark-gfm": "^1.0.0",
    "remark-math": "^4.0.0",
    "remark-parse": "^9.0.0",
    "remark-rehype": "^8.0.0",
    "sanitize-html": "^2.3.1",
    "shelljs": "^0.8.4",
    "shiki": "^0.2.7",
    "tagged-template-noop": "^2.1.1",
    "unified": "^9.2.0",
    "xss": "^1.0.8"
  },
  "devDependencies": {
    "@types/dompurify": "^2.2.1",
    "@types/express": "^4.17.11",
    "@types/jsdom": "^16.2.6",
    "@types/node": "^14.14.21",
    "@types/sanitize-html": "^1.27.1",
    "@types/shelljs": "^0.8.8",
    "jest": "^26.6.3",
    "pkg": "github:leafac/pkg",
    "prettier": "^2.2.1",
    "shx": "^0.3.3",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  },
  "pkg": {
    "assets": [
      "public/**/*"
    ]
  }
}
