{
  "name": "courselore",
  "version": "4.0.0",
  "description": "Communication Platform for Education",
  "exports": "./distribution/index.js",
  "types": "./distribution/index.d.ts",
  "bin": "./distribution/binary.js",
  "repository": "courselore/courselore",
  "keywords": [
    "education",
    "students",
    "instructors",
    "university",
    "forum",
    "chat"
  ],
  "author": "Courselore <npm@courselore.org> (https://courselore.org)",
  "license": "GPL",
  "bugs": "https://github.com/courselore/courselore/issues",
  "homepage": "https://github.com/courselore/courselore#readme",
  "type": "module",
  "scripts": {
    "postinstall": "cd ./static/ && npm install",
    "start": "nodemon --watch \"./source/\" --watch \"./configuration/\" --ext ts,mjs --exec \"npm run prepare && node ./distribution/binary.js ./configuration/development.mjs\"",
    "start:clean:data": "npm run clean:data && npm run start",
    "test": "prettier --check \"./source/**/*\" --end-of-line auto",
    "prepare": "tsc",
    "clean": "shx rm -rf ./distribution/ ./node_modules/ ./static/node_modules/",
    "clean:data": "shx rm -rf ./data/",
    "update": "npm-check-updates --upgrade && (cd static && npm-check-updates --upgrade) && npm install"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@leafac/caddy": "^1.0.4",
    "@leafac/css": "^0.6.0",
    "@leafac/express-async-handler": "^0.0.1",
    "@leafac/html": "^3.0.2",
    "@leafac/javascript": "^0.2.11",
    "@leafac/rehype-shiki": "^2.1.2",
    "@leafac/sqlite": "^3.2.1",
    "@sindresorhus/slugify": "^2.1.0",
    "argon2": "^0.28.5",
    "casual": "^1.6.2",
    "cookie-parser": "^1.4.6",
    "crypto-random-string": "^5.0.0",
    "csurf": "^1.11.0",
    "dedent": "^0.7.0",
    "deepmerge": "^4.2.2",
    "escape-string-regexp": "^5.0.0",
    "execa": "^6.1.0",
    "express": "^4.18.1",
    "express-fileupload": "^1.4.0",
    "filenamify": "^5.1.1",
    "fs-extra": "^10.1.0",
    "got": "^12.1.0",
    "jsdom": "^20.0.0",
    "lodash": "^4.17.21",
    "nodemailer": "^6.7.5",
    "prompts": "^2.4.2",
    "qrcode": "^1.5.0",
    "qs": "^6.10.5",
    "rehype-katex": "^6.0.2",
    "rehype-raw": "^6.1.1",
    "rehype-sanitize": "^5.0.1",
    "rehype-stringify": "^9.0.3",
    "remark-gfm": "^3.0.1",
    "remark-math": "^5.1.1",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "sharp": "^0.30.7",
    "shiki": "^0.10.1",
    "unified": "^10.1.2",
    "unist-util-visit": "^4.1.0"
  },
  "caddy": "2.5.2",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.1",
    "@types/cookie-parser": "^1.4.3",
    "@types/csurf": "^1.11.2",
    "@types/dedent": "^0.7.0",
    "@types/express": "^4.17.13",
    "@types/express-fileupload": "^1.2.2",
    "@types/fs-extra": "^9.0.13",
    "@types/jsdom": "^16.2.14",
    "@types/lodash": "^4.14.182",
    "@types/node": "^18.0.0",
    "@types/nodemailer": "^6.4.4",
    "@types/prompts": "^2.0.14",
    "@types/qrcode": "^1.4.2",
    "@types/qs": "^6.9.7",
    "@types/sharp": "^0.30.4",
    "caxa": "^2.1.0",
    "nodemon": "^2.0.18",
    "npm-check-updates": "^15.3.3",
    "prettier": "^2.7.1",
    "rollup": "^2.75.7",
    "shx": "^0.3.4",
    "typescript": "^4.7.4"
  }
}
