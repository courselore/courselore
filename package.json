{
  "name": "courselore",
  "version": "0.0.2",
  "description": "The Open-Source Student Forum",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": "lib/index.js",
  "repository": "courselore/courselore",
  "keywords": [
    "forum",
    "education",
    "students",
    "university"
  ],
  "author": "CourseLore <npm@courselore.org> (https://courselore.org)",
  "license": "GPL",
  "bugs": "https://github.com/courselore/courselore/issues",
  "homepage": "https://github.com/courselore/courselore#readme",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "develop": "ts-node-dev --poll src/index.ts",
    "test": "prettier --check \"src/**/*\" && jest",
    "build": "tsc && pkg --targets node14 --out-path pkg .",
    "clean": "shx rm -rf lib pkg",
    "deploy": "npm run build && ssh root@courselore.org \"mkdir -p courselore/\" && rsync -av pkg/courselore root@courselore.org:courselore/ && ssh root@courselore.org \"systemctl restart courselore\""
  },
  "dependencies": {
    "@leafac/html": "^1.0.0",
    "@leafac/rehype-shiki": "^1.1.3",
    "deepmerge": "^4.2.2",
    "express": "^4.17.1",
    "greenlock": "^4.0.4",
    "greenlock-express": "^4.0.3",
    "rehype-katex": "^4.0.0",
    "rehype-raw": "^5.0.0",
    "rehype-sanitize": "^4.0.0",
    "rehype-stringify": "^8.0.0",
    "remark-gfm": "^1.0.0",
    "remark-math": "^4.0.0",
    "remark-parse": "^9.0.0",
    "remark-rehype": "^8.0.0",
    "shelljs": "^0.8.4",
    "shiki": "^0.2.7",
    "tagged-template-noop": "^2.1.1",
    "unified": "^9.2.0"
  },
  "devDependencies": {
    "@leafac/pkg": "^4.4.10",
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.21",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "shx": "^0.3.3",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "pkg": {
    "assets": [
      "public/**/*",
      "node_modules/shiki-themes/data/**/*",
      "node_modules/onigasm/lib/onigasm.wasm",
      "node_modules/shiki-languages/data/**/*"
    ]
  }
}
