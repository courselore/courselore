{
  "name": "courselore",
  "version": "4.1.6",
  "description": "Communication Platform for Education",
  "exports": "./build/server/index.mjs",
  "types": "./build/server/index.d.mts",
  "bin": "./build/server/binary.mjs",
  "author": "Courselore <npm@courselore.org> (https://courselore.org)",
  "homepage": "https://github.com/courselore/courselore",
  "bugs": "https://github.com/courselore/courselore/issues",
  "repository": "courselore/courselore",
  "license": "GPL",
  "keywords": [
    "education",
    "students",
    "instructors",
    "university",
    "forum",
    "chat"
  ],
  "scripts": {
    "postinstall": "(cd ./server/ && npm install) && (cd ./static/ && npm install)",
    "start": "nodemon --watch \"./server/**/*.mts\" --watch \"./static/{prepare.mjs,**/*.{png,jpeg,ico}}\" --watch \"./configuration/**/*.mjs\" --ext \"*\" --exec \"npm run prepare && node ./build/server/binary.mjs ./configuration/development.mjs\"",
    "start:clean:data": "npm run clean:data && npm run start",
    "test": "prettier --check \"./server/**/*.mts\" --check \"./static/prepare.mjs\" --check \"./configuration/**/*.mjs\" --end-of-line auto",
    "prepare": "(cd ./server/ && npm run prepare) && (cd ./static/ && npm run prepare)",
    "clean": "shx rm -rf ./build/",
    "clean:data": "shx rm -rf ./data/",
    "update": "npm-check-updates --upgrade && (cd ./server/ && npm-check-updates --upgrade) && (cd ./static/ && npm-check-updates --upgrade) && npm install"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@leafac/caddy": "^1.0.4",
    "@leafac/css": "^0.6.2",
    "@leafac/express-async-handler": "^0.0.1",
    "@leafac/html": "^3.0.2",
    "@leafac/javascript": "^0.2.12",
    "@leafac/rehype-shiki": "^2.2.1",
    "@leafac/sqlite": "^3.2.1",
    "@sindresorhus/slugify": "^2.1.1",
    "argon2": "^0.29.1",
    "casual": "^1.6.2",
    "cookie-parser": "^1.4.6",
    "crypto-random-string": "^5.0.0",
    "dedent": "^0.7.0",
    "escape-string-regexp": "^5.0.0",
    "execa": "^6.1.0",
    "express": "^4.18.1",
    "express-fileupload": "^1.4.0",
    "filenamify": "^5.1.1",
    "fs-extra": "^10.1.0",
    "got": "^12.5.1",
    "jsdom": "^20.0.1",
    "lodash": "^4.17.21",
    "nodemailer": "^6.8.0",
    "prompts": "^2.4.2",
    "qrcode": "^1.5.1",
    "qs": "^6.11.0",
    "rehype-katex": "^6.0.2",
    "rehype-raw": "^6.1.1",
    "rehype-sanitize": "^5.0.1",
    "rehype-stringify": "^9.0.3",
    "remark-gfm": "^3.0.1",
    "remark-math": "^5.1.1",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "semver": "^7.3.8",
    "sharp": "^0.31.1",
    "shiki": "^0.11.1",
    "unified": "^10.1.2",
    "unist-util-visit": "^4.1.1"
  },
  "caddy": "2.6.1",
  "devDependencies": {
    "caxa": "^2.1.0",
    "nodemon": "^2.0.20",
    "npm-check-updates": "^16.3.8",
    "prettier": "^2.7.1",
    "shx": "^0.3.4"
  }
}
