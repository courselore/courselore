{
  "name": "courselore",
  "version": "6.1.0",
  "description": "Communication Platform for Education",
  "keywords": [
    "education",
    "students",
    "instructors",
    "university",
    "forum",
    "chat"
  ],
  "homepage": "https://github.com/courselore/courselore",
  "repository": "https://github.com/courselore/courselore",
  "bugs": "https://github.com/courselore/courselore/issues",
  "author": "Courselore <npm@courselore.org> (https://courselore.org)",
  "license": "GPL-3.0",
  "bin": "./build/index.mjs",
  "scripts": {
    "prepare": "node ./prepare.mjs",
    "start": "nodemon --watch \"./{package.json,prepare.mjs}\" --watch \"./source/**/*.mts\" --watch \"./static/{leafac--javascript.mjs,**/*.{webp,png,ico}}\" --watch \"./configuration/**/*.{mjs,cjs,crt,key,pub,webp}\" --ext \"*\" --exec \"npm run prepare && cross-env NODE_OPTIONS=--enable-source-maps node ./build/index.mjs ./configuration/development.mjs\"",
    "start:profile": "shx rm -rf ./data/measurements/ && npm run prepare && node ./build/index.mjs ./configuration/profile.mjs",
    "start:clean:data": "npm run clean:data && npm run start",
    "test": "prettier --check \"./package.json\" --check \"./prepare.mjs\" --check \"./source/**/*.mts\" --check \"./configuration/**/*.mjs\" --end-of-line auto && tsc --noEmit",
    "test:license": "license-checker --summary",
    "configuration:saml:keys": "openssl req -x509 -newkey rsa:2048 -nodes -days 365000 -subj \"/\" -keyout configuration/development--saml--identity-provider--signing.key -out configuration/development--saml--identity-provider--signing.crt && openssl req -x509 -newkey rsa:2048 -nodes -days 365000 -subj \"/\" -keyout configuration/development--saml--service-provider--signing.key -out configuration/development--saml--service-provider--signing.crt && openssl req -x509 -newkey rsa:2048 -nodes -days 365000 -subj \"/\" -keyout configuration/development--saml--service-provider--encryption.key -out configuration/development--saml--service-provider--encryption.crt && openssl x509 -pubkey -noout -in configuration/development--saml--service-provider--encryption.crt > configuration/development--saml--service-provider--encryption.pub",
    "clean:all": "npm run clean:build && npm run clean:data && npm run clean:node_modules",
    "clean:build": "shx rm -rf ./build/",
    "clean:data": "shx rm -rf ./data/",
    "clean:node_modules": "shx rm -rf ./node_modules/",
    "update": "npm-check-updates --upgrade && npm install"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@leafac/caddy": "^1.0.5",
    "@leafac/css": "^0.10.0",
    "@leafac/express-async-handler": "^0.0.3",
    "@leafac/html": "^4.0.1",
    "@leafac/javascript": "^0.5.3",
    "@leafac/node": "^0.0.2",
    "@leafac/sqlite": "^4.0.0",
    "@node-saml/node-saml": "^4.0.4",
    "@sindresorhus/slugify": "^2.2.0",
    "argon2": "^0.30.3",
    "casual": "^1.6.2",
    "commander": "^10.0.1",
    "cookie-parser": "^1.4.6",
    "crypto-random-string": "^5.0.0",
    "dedent": "^0.7.0",
    "escape-string-regexp": "^5.0.0",
    "execa": "^7.1.1",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.0",
    "ffmpeg-static": "^5.1.0",
    "filenamify": "^6.0.0",
    "got": "^12.6.0",
    "hast-util-to-string": "^2.0.0",
    "jsdom": "^22.0.0",
    "lodash": "^4.17.21",
    "nodemailer": "^6.9.2",
    "prompts": "^2.4.2",
    "qrcode": "^1.5.3",
    "qs": "^6.11.1",
    "rehype-katex": "^6.0.3",
    "rehype-parse": "^8.0.4",
    "rehype-raw": "^6.1.1",
    "rehype-sanitize": "^5.0.1",
    "rehype-stringify": "^9.0.3",
    "remark-gfm": "^3.0.1",
    "remark-math": "^5.1.1",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "sanitize-xml-string": "^1.1.0",
    "semver": "^7.5.1",
    "sharp": "^0.32.1",
    "shiki": "^0.14.2",
    "unified": "^10.1.2",
    "unist-util-visit": "^4.1.2"
  },
  "caddy": "2.6.4",
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/preset-typescript": "^7.21.5",
    "@fontsource/jetbrains-mono": "^4.5.12",
    "@fontsource/public-sans": "^4.5.12",
    "@types/cookie-parser": "^1.4.3",
    "@types/dedent": "^0.7.0",
    "@types/express": "^4.17.17",
    "@types/express-fileupload": "^1.4.1",
    "@types/jsdom": "^21.1.1",
    "@types/lodash": "^4.14.194",
    "@types/node": "^20.1.3",
    "@types/nodemailer": "^6.4.7",
    "@types/prompts": "^2.4.4",
    "@types/qrcode": "^1.5.0",
    "@types/qs": "^6.9.7",
    "@types/semver": "^7.5.0",
    "0x": "^5.5.0",
    "autocannon": "^7.11.0",
    "autoprefixer": "^10.4.14",
    "autosize": "^6.0.1",
    "base-x": "^4.0.0",
    "bootstrap-icons": "^1.10.5",
    "caxa": "^3.0.1",
    "cross-env": "^7.0.3",
    "esbuild": "^0.17.18",
    "fake-avatars": "^1.1.0",
    "fast-myers-diff": "^3.1.0",
    "globby": "^13.1.4",
    "license-checker": "^25.0.1",
    "mousetrap": "^1.6.5",
    "nodemon": "^2.0.22",
    "npm-check-updates": "^16.10.12",
    "postcss": "^8.4.23",
    "postcss-nested": "^6.0.1",
    "prettier": "^2.8.8",
    "saml-idp": "^1.2.1",
    "scroll-into-view-if-needed": "^3.0.10",
    "shx": "^0.3.4",
    "text-field-edit": "^3.2.0",
    "textarea-caret": "^3.1.0",
    "tippy.js": "^6.3.7",
    "typescript": "^5.0.4",
    "xxhash-addon": "^2.0.1"
  }
}
